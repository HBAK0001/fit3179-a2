{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": {
      "url": "https://hbak0001.github.io/fit3179-a2/data/fed-cand-all-2019.csv"
    },
    "vconcat": [
      {
        "selection": {
          "region": {
            "type": "single",
            "fields": ["Demographic"],
            "bind": {
              "input": "select",
              "options": ["Inner Metropolitan", "Outer Metropolitan", "Provincial", "Rural"],
              "name": "Demographic"
            }
          }
        },
        "transform": [
          {
            "joinaggregate": [
              {"op": "sum", "field": "TotalVotes", "as": "AllVotes"}
            ]
          },
          {
            "calculate": "datum.TotalVotes / datum.AllVotes",
            "as": "PercentageVotes"
          },
          {
            "joinaggregate": [
              {
                "op": "sum",
                "field": "PercentageVotes",
                "as": "sumPercentageVotes"
              }
            ],
            "groupby": ["PartyAb"]
          },
          {
            "lookup": "DivisionNm",
            "from": {
              "data": {
                "url": "https://hbak0001.github.io/fit3179-a2/data/fed-house-nom-div-2019.csv",
                "format": {"type": "csv"}
                },
                "key": "DivisionNm",
                "fields": ["Demographic"]
              }
          },
          {"filter": {"selection": "region"}}
        ],
        "width": {"step": 30}, "height": "container",
        "mark": {"type": "bar"},
        "encoding": {
          "y": {
            "aggregate": "sum",
            "field": "TotalVotes",
            "title": "population",
            "axis": {"grid": false}
          },
          "x": {
            "field": "PartyAb",
            "axis": {"title": "", "labelAngle": 0},
            "sort": "-y"
          },
          "color": {
            "field": "PartyAb",
            "scale": {
              "domain": [
                "ALP",
